namespace = NVL_Unifier

country_event = {
	id = NVL.1
	title = NVL.1.t
	desc = NVL.1.d
	picture = GFX_report_event_generic
	is_triggered_only = yes
	trigger = {
		tag = SHI
	}
	mean_time_to_happen = {
		days = 1247		# should trigger around June 2778
	}
	option = {
		name = NVL.1.a
		ai_chance = {
			factor = 0
		}
		trigger = {
			tag = SHI
			has_game_rule = SHI/EUR/ARR # SHI annex Eureka and Arroyo
		}
		hidden_effect = {
			SHI = {
				every_state = {
					limit = {
						OR = {							
							is_core_of = EUR							
							is_core_of = PAC							
							is_core_of = UMB							
							is_core_of = ARR							
							is_core_of = DIS							 
							is_core_of = MLT							
							is_core_of = PMR							
							is_core_of = RBT							
							is_core_of = CCW							
							is_core_of = TRL						
						}
                        NOT = {
                            is_controlled_by = SHI
                        }
					}
					transfer_state_to = SHI
                    add_compliance = 0.6
				}
			}
            
		}
	}
    option = {
		name = NVL.1.b # SHI annex Eureka and Arroyo and Oregon
		ai_chance = {
			factor = 0
		}
		trigger = {
			tag = SHI
			has_game_rule = SHI/EUR 
		}
		hidden_effect = {
			SHI = {
				every_state = {
					limit = {
						OR = {							
							is_core_of = EUR							
							is_core_of = PAC							
							is_core_of = UMB							
							is_core_of = ARR							
							is_core_of = DIS							 
							is_core_of = MLT							
							is_core_of = PMR							
							is_core_of = RBT							
							is_core_of = CCW							
							is_core_of = TRL
                            is_core_of = MDT
                            is_core_of = TIM
                            is_core_of = BDT						
						}
                        NOT = {
                            is_controlled_by = SHI
                        }
					}
					transfer_state_to = SHI
                    add_compliance = 0.6
				}
			}
            
		}
	}
        option = {
		name = NVL.1.c # SHI annex Eureka
		ai_chance = {
			factor = 0
		}
		trigger = {
			tag = SHI
			has_game_rule = SHI/EUR 
		}
		hidden_effect = {
			SHI = {
				every_state = {
					limit = {
						OR = {							
							is_core_of = EUR												
						}
                        NOT = {
                            is_controlled_by = SHI
                        }
					}
					transfer_state_to = SHI
                    add_compliance = 0.6
				}
			}
            
		}
	}
}

